%h2 Jack Russell Software Team
%ul.left-section
  - @team.each_with_index do |mate, index|
    - if (index % 2) == 0 
      = haml :tile, :locals => { :mate => mate }

%ul.right-section
  - @team.each_with_index do |mate, index|
    - if (index % 2) > 0 
      = haml :tile, :locals => { :mate => mate }

.clear